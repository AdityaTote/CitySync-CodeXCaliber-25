{
  "name": "CitySync",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "db:migrate": "cd apps/backend && pnpx prisma migrate dev --schema=./prisma/schema",
    "db:generate": "cd apps/backend && pnpx prisma generate --schema=./prisma/schema",
    "db:studio": "cd apps/backend && pnpx prisma studio --schema=./prisma/schema"
  },
  "devDependencies": {
    "prettier": "^3.5.3",
    "turbo": "^2.5.0",
    "typescript": "5.8.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
